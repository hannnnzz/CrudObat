extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data Obat
			small Edit Data Obat
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Dashboard 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Data Obat
				.box-tools.pull-right
					button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form' method='post' action='/drugs/edit/#{(id==undefined) ? data.id : id}'  enctype='multipart/form-data')
					.row

						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama
									input(type='text' value="#{data.nama}" name='nama' placeholder='Masukkan Nama', autofocus).form-control
								.form-group
									label
										| Kode
									input(type='text' value="#{ (kode == undefined) ? data.kode : kode }" name='kode' placeholder='Masukkan Kode').form-control
								.form-group
									label
										| Kategori
									input(type='text' value="#{ (kategori == undefined) ? data.kategori : kategori }" name='kategori' placeholder='Masukkan Kategori').form-control
								.form-group
									label
										| Produsen
									input(type='text' value="#{ (produsen == undefined) ? data.produsen : produsen }" name='produsen' placeholder='Masukkan Produsen').form-control
								.form-group
									label
										| Distributor
									input(type='text' value="#{ (distributor == undefined) ? data.distributor : distributor }" name='distributor' placeholder='Masukkan Distributor').form-control
								.form-group
									label
										| Stok
									input(type='text' value="#{ (stok == undefined) ? data.stok : stok }" name='stok' placeholder='Masukkan Stok').form-control
								.form-group
									label
										| Gambar
									input(type='file' name='gambar')
							.box-footer
								input(type="hidden" name="_method" value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/drugs').btn.btn-primary.pull-right
									| Back